/* ---------------------------------
 *              Card
 * --------------------------------- */
.card
    overflow: visible
    border-radius: $card-radius

    & + .card, & + .column-right-shadow
        margin-top: 1.5rem

    .card-image
        overflow: hidden
        border-top-left-radius: $card-radius
        border-top-right-radius: $card-radius
        padding: 0 1rem 0

    .card-image:empty
        padding: 0

    .media + .media
        border: none
        margin-top: 0

    .card-content
        padding: 1.5rem 1rem 2rem
        margin: 0 0 4rem

    @media screen and (max-width: 767px)
      .card-content
        padding .8rem
        margin: 0