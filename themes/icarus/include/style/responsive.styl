/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-1-column .container, .is-2-column .container
        max-width: $desktop - 2 * $mygap
        width: $desktop - 2 * $mygap

+fullhd()
    .is-2-column .container
        max-width: $widescreen - 2 * $gap
        width: $widescreen - 2 * $gap

    .is-1-column .container
        max-width: $desktop - 2 * $gap
        width: $desktop - 2 * $gap

+tablet()
    .is-sticky
        position: -webkit-sticky
        position: sticky
        top: 1.5rem
        z-index: 99

    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top: .75rem
            align-self: flex-start

+mobile()
    body
        /*font-family FZLTHJT, YAMSRF, PingFang, FZLTXHJT, 'Mircosoft Yahei', 'SourceCodePro Medium', 'FZLTH Pro Light',  'FZLTH Pro ExtraLight', WQYDKZH, SYHT
        font-weight lighter
        webkit-font-smoothing antialiased
        -moz-font-smoothing antialiased
        font-smoothing antialiased*/
        
        /* font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif */

        font-family PT-Serif, FZLTHJT

    .columns
        margin-left 0
        margin-right 0

    .column
        padding 0
        .card-content
            .menu
                padding 1rem

    .section
        width 100%
        margin-top 5rem!important
        padding 0

    article
        &.article
            .article-meta
                margin 0.8rem 0 2rem
            .article-meta-context
                margin-top 1rem!important
                padding 0 2.1rem
            .content
                /* font-size 17.4px
                font-size 1.28rem */

                /*color #3b3b3b*/
                line-height 30px
                font-size 17px
                /*letter-spacing -0.35px*/
                text-align unset
                font-family inherit
                blockquote
                    font-size 1.1rem
                    padding 1rem 0
                h1, h2, h3, h4, h5, h6
                    padding 0 2.1rem
                    line-height 2.66rem
                    font-family PT-Serif, FZLTZCHJT
                p
                    padding 0 2.1rem

    .card
        .card-image:empty
            /* padding 0 0 1rem */
            padding 0

        .card-content
            padding 0
            margin 0
            background white
            .menu-label
                font-size 1.1rem
            article.media
                .media-content
                    .title.is-6
                        font-size 1.1rem
            .level-left
                font-size 1rem

            .title
                width 65%
                height auto
                line-height 1.4
                margin-bottom 0
                .nav-link
                    /*line-height 1.125*/
                    line-height 1.5
                    font-size 1.25rem!important
                    font-weight bold
                    vertical-align text-top
            
            .title-index
                padding 0
                color #3b3b3b
                margin-bottom unset!important
                font-family PT-Serif, FZLTZCHJT

            .categories-list
                margin 0 2.1rem

    .card + .card, .card + .column-right-shadow
        margin-top 1rem
                    
    .article-tags.size-small
        font-size 1rem
        padding 0 2.1rem

    .breadcrumb:not(:last-child), .level:not(:last-child), .list:not(:last-child), .message:not(:last-child), .pagination:not(:last-child), .tabs:not(:last-child), .box:not(:last-child), .content:not(:last-child), .notification:not(:last-child), .progress:not(:last-child), .table:not(:last-child), .table-container:not(:last-child), .title:not(:last-child), .subtitle:not(:last-child), .block:not(:last-child), .highlight:not(:last-child)
        margin-bottom .6rem

    .pagination
        margin .5rem

    .is-hidden-mobile
        display block!important

    .pagination-list li
        float left

    /* 移动端导航栏 */
    .is-mobile-new
        display flex!important

    .is-pc
        display none!important

    .is-top
        margin-top 0rem!important
        transition .3s ease-out

    .is-totop
        margin-top 1rem!important
        transition .3s ease-out

    .nav-line
        width 30px
        height 2px
        background #2c97e8
        position absolute
        right .95rem

    .nav-line:first-child
        top 1.05rem

    .nav-line:last-child
        top 1.75rem

    .rotate-line-first
        transform rotateZ(-45deg)
        transform-origin 68% 50%
        transition .3s ease-out

    .rotate-line-last
        transform rotateZ(45deg)
        transform-origin 78% 50%
        transition .3s ease-out

    .back-origin
        transform rotateZ(0deg)
        transition .3s ease-out

    .navbar-end-new
        position absolute!important
        right 0.8rem!important
        top .5rem

    .navbar-start-new
        flex-direction column!important
        width 100%!important
        position fixed!important
        left 0!important
        background white!important
        padding 1rem 0!important
        /* box-shadow 0 1px 5px rgba(0, 0, 0, .1) */

    .navbar-item
        padding 1.25rem 0.15rem!important

    .navbar-main .navbar-item-new
        width 100%
        display unset
        color #24292e
        font-size 16.5px
        line-height 3.6rem
        padding 0 2rem!important
        /* border-bottom 1px solid #eee!important */
        &::after
            content ''
            display table
            width 100%;
            height 1px
            background rgba(0, 0, 0, .1)
        &:last-child::after
            content unset

    .justify-content-center
        justify-content left!important

    .search-container
        padding 0.15rem 0 0 0
        background #f5f5f5
        margin 1rem 2rem
        border-radius 60px
        &>.search
            padding-left 1.3rem

    .nav-list
        width 52px
        height 40px
        border none!important
        margin-top .2rem!important

    .search-icon
        /* color #2c97e8 */
        color #888

    .search-text, .search-text-long
        margin-left 0.5rem
        display inline-block
        color #999
        padding 1rem

    .search-text
        width 72%

    .search-text-long
        width 87%

    .btn-menu
        display inline-block!important
        padding .5rem 1.2rem!important

    .card-index
        width 100%!important
        float unset
        height auto
        background white
        border-radius unset
        margin-top 1rem
        /* border-bottom 1px solid #f5f5f5 */
        &::after
           content ''
           display block
           height 0px
           background #f5f5f5 

    .card-index:last-child
        border none

    .card-context
        width 100%!important

    .card-image-index
        border-radius 6px
        height auto

    .card-image-context
        padding 0
        border-radius 0
        img
            height auto!important
            padding 0
            border-radius inherit!important

    .context-title
        width auto!important
        overflow unset
        line-height 2rem
        padding 0 2.1rem
        &:hover
            color: #24292e

    .content-index
        margin-bottom .5rem!important

    .card-comment, .footer-width
        width 100%
    
    .card-comment
        padding 0 2.1rem
        .is-5
            padding 1rem 0

    .navbar-brand
        margin-left 1.6rem!important

    .navbar-menu
        margin-right -.75rem!important

    .info-line
        width 32%
        height auto
        font-size 11px
        /* padding 0.2rem 0 0.8rem 0 */
        position relative
        float right
        .info-line-content
            width 60%
            margin-right 5%
            float left
            display none
        .info-line-image
            /* max-width 35%
            float right */
            height 77.57px
            display block
    
    .is-pc-only
        display none

    .level-item:not(:last-child)
        margin-bottom .5rem

    .time-index
        float left
        font-size 11px
        color #ababab

    .time-context
        float left

    .card-content-context
        padding 0

    .card-content-index
        border none
        overflow hidden
        border-radius 6px
        /* padding 0.5rem 0 0.5rem 0 !important */
        padding 0.5rem 1.8rem !important

    .gz-qrcode, .gz-qrcode-img
        display none

    .categories-index
        color #ababab
        font-size 12px
        margin-right .5rem

    .shengming
        font-size 13px
        >p:first-child
            text-align left !important
            border: none !important
        .guanzhu
            width 100%!important
            margin-top 1rem!important

    #toc-mask
        z-index 9

    .mobile-pwd::after
        content '密'
        background #ff0000
        width 80px
        height 80px
        display block
        border-radius 100%
        line-height 110px
        text-indent 12px
        position absolute
        top -40px
        right -40px
        color white
        font-size 20px
        font-weight bold

    .mobile-qrcode
        display block
        padding 1rem 2rem
        cursor pointer
        i
            color #444
            font-size 20px
            vertical-align middle
        .gzgzh
            color #444
            font-size 16px
            padding-left 5px
            line-height 30px
            display inline-block
    
    .gzgzh-main
        position fixed
        top 0
        left 0
        bottom 0
        background rgba(0,0,0,0.3)
        width 100%
        height 100%
        z-index 30
        .gzgzh-img
            width 300px
            position absolute
            top 50%
            margin-top -130px
            left 50%
            margin-left -150px

    .recommend-list
        width 100%
        padding 0 2.1rem

    .guanzhushengming
        padding 0 2.1rem

    .guanzhuwo
        width  100%

    .article-video
        width auto
        max-height 240px
        video
            width 100%
            max-height inherit

    #lg-counter
        padding-top 4px!important
    .lg-toolbar
        bottom 10px
        top unset!important
        .lg-icon
            height 32px!important
            width 32px!important
            padding 0!important
            color white!important
            font-size 21px!important
            line-height 32px!important
            border-radius 50%
            background rgba(255,255,255,.12)
        .lg-close
            margin-right 41%!important
        #lg-download
            margin-right 10px
    .lg-sub-html
        bottom 2.5rem!important
    .lg-outer .lg-img-wrap
        padding 0!important

    .lg-actions .lg-prev, .lg-actions .lg-next
        color white
        padding 10px
        border-radius 50%

    .pinglunjuli
        margin-bottom: 3rem!important
        .level-item
            max-width 90%
            padding-left 1.2rem
