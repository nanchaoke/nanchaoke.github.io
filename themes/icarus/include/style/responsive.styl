/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-1-column .container, .is-2-column .container
        max-width: $desktop - 2 * $gap
        width: $desktop - 2 * $gap

+fullhd()
    .is-2-column .container
        max-width: $widescreen - 2 * $gap
        width: $widescreen - 2 * $gap

    .is-1-column .container
        max-width: $desktop - 2 * $gap
        width: $desktop - 2 * $gap

+tablet()
    .is-sticky
        position: -webkit-sticky
        position: sticky
        top: 1.5rem
        z-index: 99

    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top: .75rem
            align-self: flex-start

+mobile()
    .section
        padding: 0 1rem

    article
        &.article
            .article-meta
                margin-bottom .5rem
            .content
                font-size 17px
                line-height 2.2rem
                blockquote
                    font-size 1.1rem

    .card
        .card-image
            padding 1rem 1rem 0

        .card-image:empty
            padding 0 0 1rem

        .card-content
            padding .8rem
            margin 0
            .menu-label
                font-size 1.1rem
            article.media
                .media-content
                    .title.is-6
                        font-size 1.1rem
            .level-left
                font-size 1rem

            .title
                line-height 1.5
                margin-bottom .2rem
                .nav-link
                    /*line-height 1.125*/
                    line-height 1.5
                    display inline-block

    .card + .card, .card + .column-right-shadow
        margin-top 2rem
                    
    .size-small
        font-size 1rem

    .breadcrumb:not(:last-child), .level:not(:last-child), .list:not(:last-child), .message:not(:last-child), .pagination:not(:last-child), .tabs:not(:last-child), .box:not(:last-child), .content:not(:last-child), .notification:not(:last-child), .progress:not(:last-child), .table:not(:last-child), .table-container:not(:last-child), .title:not(:last-child), .subtitle:not(:last-child), .block:not(:last-child), .highlight:not(:last-child)
        margin-bottom .6rem

    .pagination
        margin .5rem

    .is-hidden-mobile
        display block!important

    .pagination-list li
        float left

    /* 移动端导航栏 */
    .is-mobile-new
        display flex!important

    .is-pc
        display none!important

    .is-hide
        opacity 0
        visibility hidden
        transition .3s ease-out

    .is-show
        opacity 1
        visibility visible
        transition .3s ease-out
    
    .is-top
        margin-top 0rem!important
        transition .3s ease-out

    .is-totop
        margin-top 1rem!important
        transition .3s ease-out

    .nav-line
        width 30px
        height 2px
        background #2c97e8
        position absolute
        right .95rem

    .nav-line:first-child
        top 1.8rem

    .nav-line:last-child
        top 2.5rem

    .rotate-line-first
        transform rotateZ(-45deg)
        transform-origin 68% 50%
        transition .3s ease-out

    .rotate-line-last
        transform rotateZ(45deg)
        transform-origin 78% 50%
        transition .3s ease-out

    .back-origin
        transform rotateZ(0deg)
        transition .3s ease-out

    .container-new
        padding 0!important

    .justify-content-left-new
        justify-content left!important

    .navbar-logo-new
        width auto!important
        border none!important

    .navbar-end-new
        position absolute!important
        right 1rem!important

    .search-new
        width auto!important
        border none!important
        padding 1.25rem 1rem!important

    .nav-list
        width 52px
        height 60px
        border none!important

    .navbar-start-new
        flex-direction column!important
        width 100%!important
        position fixed!important
        left 0!important
        background white!important
        box-shadow 0 1px 5px rgba(0, 0, 0, .1)
        padding-top 1rem!important

    .navbar-item
        padding 1.25rem 0.15rem!important

    .navbar-item-new
        border-bottom 1px solid #eee!important
        width 100%
        padding 1.25rem 1.8rem!important

    .justify-content-center
        justify-content left!important

    .search-container
        padding 0.5rem 0 .5rem 0
        background #f5f5f5
        margin 1rem 1.8rem 0
        border-radius 5px
        &>.search
            padding-left 1.3rem

    .search-icon
        /* color #2c97e8 */
        color #888

    .search-text
        margin-left 0.5rem
        width 72%
        display inline-block
        color #999

    .search-text-long
        margin-left 0.5rem
        width 87%
        display inline-block
        color #999
        padding .5rem

    .btn-menu
        display inline-block!important
        padding .5rem 1.2rem!important