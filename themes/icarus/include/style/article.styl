/* ---------------------------------
 *    Article Summary and Content
 * --------------------------------- */
$article-font-size ?= 16px

article
    &.media
        .media-content
            color: $text-light

            .title
                margin: 0
                line-height: inherit

    &.article
        .article-meta, .article-tags
            color: $text-light

        .article-meta
            overflow-x: auto
            margin-bottom: 1rem

        .title
            color: #3273dc
            margin-bottom: 1rem
            &:hover
                color: #3273dc

        .article-more
            @extend .button.is-light
            background-color: #44B549
            color: white
            height: 2.4rem
            &:hover
                background-color: #44B549
                color: white


        .content
            word-wrap: break-word
            font-size: $article-font-size
            line-height: 2rem
            margin-bottom: 1rem

            h1
                font-size: 1.75em

            h2
                font-size: 1.5em

            h3
                font-size: 1.25em

            h4
                font-size: 1.125em

            h5
                font-size: 1em

            pre
                font-size: .85em

            code
                padding: 0
                background: transparent
                overflow-wrap: break-word

            blockquote
                &.pullquote
                    float: right
                    max-width: 50%
                    font-size: 1.15rem
                    position: relative

                footer
                    strong + cite
                        margin-left: .5em
            
            .message.message-immersive
                border-radius: 0
                margin: 0 0-($card-content-padding) $card-content-padding 0-($card-content-padding)
                .message-body
                    border: none

            blockquote
                font-size 1rem
                color #828a92
                line-height 1.8rem
                border-left none
                background-color unset
                padding 0

            &>p:not(:last-child) {
                margin-bottom 1.5em
            }

            img {
                margin auto
                display block
            }

            .zhu
                color #888
                font-size 14px
                line-height 1.8

            .fenjie
                width 35%
                border-top 1px solid #d3d3d3
                margin 5rem auto

        .guanzhushengming
            padding 1rem 0 2rem

        .guanzhuwo
            width 60%
            margin auto
        @media screen and (max-width: 767px)
            .guanzhuwo
                width  100%

        .shengming
            font-size 14px
            border-top 1px solid #e0e0e0
            border-bottom 1px solid #e0e0e0
            padding 1rem 0
            margin 1rem 0
            line-height 1.8
            color #888

            p
                margin-bottom 0


.rtl
    direction: rtl

    .level
        &, &.is-mobile
            .level-item:not(:last-child)
                margin-left: .75rem
                margin-right: 0

.thumbnail
    object-fit: cover
    width: 100% !important
    height: 100% !important

// Overflow table
.table-overflow
    overflow-x: auto

    table
        width: auto !important

        th
            word-break: keep-all

// Video container
.video-container
    position: relative
    padding-bottom: 56.25%
    padding-top: 25px
    height: 0

    iframe
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%


@media screen and (min-width: 1280px)
    .is-1-column .container, .is-2-column .container
        width: 680px!important
        max-width: 680px!important
    .column.is-8-widescreen
        width: 100%

#toc
    .card-content
        .menu
            &>ul
                border-left: 1px solid #ddd
                margin-left: 4px
                &>li::before
                    position: relative
                    top: 0
                    left: -4px
                    display: inline-block
                    width: 7px
                    height: 7px
                    content: ''
                    border-radius: 50%
                    background-color: #eb5055

.menu-list li ul
    border: none
    padding: 0
    li
        margin-bottom: .75rem

.menu-list a
    margin-left: .5rem
    margin: -1.1rem 0 0 .5rem
    padding: 0 0 1rem .5rem

.menu-list a.is-active, .menu-list a:hover
    background: none
    color: #eb5055

.column.column-right.is-4-tablet.is-4-desktop.is-4-widescreen.order-3.is-sticky
    position: fixed
    top: 5rem
    right: 9%
    z-index: 100
    width: 240px

.pinglunjuli
    margin-bottom: 5rem!important
@media screen and (max-width: 767px)
    .pinglunjuli
        margin-bottom: 3rem!important

.upyun-logo
    height: 2rem
    max-height: 2rem

.footer
    padding: 1rem 0 1rem
    margin: 4rem 0 0 0
    &>.container
        padding: 0 1rem

.pagination
    padding: 1rem
@media screen and (max-width: 767px)
    .pagination
        padding: 0

.text-blue
    color: #9053B9
    font-weight: bold

/* 类响应式样式 */
.is-mobile-new
        display none!important

.is-pc
        display flex!important